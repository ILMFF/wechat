<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myself_top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:background="#222222"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_friend_back_btn"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_btn"
            android:background="@drawable/back_btn_press"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="查看好友"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/x70" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/firend_icon_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginTop="@dimen/x20"
        android:orientation="horizontal"
        android:background="@color/white">



        <ImageView
            android:id="@+id/friend_now_icon"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:src="@mipmap/icon"/>

        <TextView
            android:id="@+id/friend_now_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/friend_now_icon"
            android:text="我的昵称"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"/>



    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/popmenu_press"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/popmenu_press"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"/>

    <RelativeLayout
        android:id="@+id/friend_sex_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="性别"
            android:layout_marginLeft="@dimen/x20"/>

        <TextView
            android:id="@+id/friend_now_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="未填写"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/discover_press"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="地区"
            android:layout_marginLeft="@dimen/x20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国"
            android:layout_marginRight="@dimen/x20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="相册"
            android:layout_marginLeft="@dimen/x20"/>

       <ImageView
           android:layout_width="@dimen/x70"
           android:layout_height="@dimen/x70"
           android:layout_centerVertical="true"
           android:layout_marginLeft="@dimen/x100"
           android:src="@mipmap/add_picture"/>


    </RelativeLayout>






    <RelativeLayout
        android:id="@+id/friend_signature_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:background="@color/white">

        <TextView
            android:id="@+id/friend_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:layout_marginLeft="@dimen/x20"/>

        <TextView
            android:id="@+id/friend_now_signature"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:text="未填写"
            android:layout_marginTop="@dimen/x40"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20" />

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/white">

        <TextView
            android:id="@+id/friend_chatbackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="@drawable/content_press"
            android:clickable="true"
            android:drawablePadding="@dimen/x10"
            android:drawableRight="@mipmap/right"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/y26"
            android:paddingRight="@dimen/x15"
            android:text="聊天背景"
            android:textColor="#000"
            android:textSize="@dimen/x18"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/discover_press"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"/>

    <TextView
        android:id="@+id/friend_check_chatrecord"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@drawable/content_press"
        android:text="查看聊天记录"
        android:textSize="@dimen/x18"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:paddingLeft="@dimen/x20"
        android:drawableRight="@mipmap/right"
        android:paddingRight="@dimen/x15"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/discover_press"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"/>

    <TextView
        android:id="@+id/friend_clear_chatrecord"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@drawable/content_press"
        android:textColor="#000"
        android:text="清空聊天记录"
        android:textSize="@dimen/x18"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x20"
        android:drawableRight="@mipmap/right"
        android:paddingRight="@dimen/x15"/>

</LinearLayout>

</ScrollView>