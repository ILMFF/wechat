<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/myfavorite_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/content_press">


        <ImageView
            android:id="@+id/myfavorite_icon"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:src="@mipmap/icon"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"/>

        <TextView
            android:id="@+id/myfavorite_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_toRightOf="@id/myfavorite_icon"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="@dimen/x20"
            android:layout_alignTop="@id/myfavorite_icon"/>

        <TextView
            android:id="@+id/myfavorite_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x18"
            android:text="时间"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x20"/>

        <EditText
            android:id="@+id/myfavorite_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myfavorite_icon"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:layout_below="@id/myfavorite_nickname"
            android:background="@null"
            android:enabled="false"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x20"
            android:layout_below="@id/myfavorite_content"/>
    </RelativeLayout>

</LinearLayout>