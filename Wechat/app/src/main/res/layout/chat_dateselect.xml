<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/date_select_toplayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:background="#222222"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_dateselect_back_btn"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_btn"
            android:background="@drawable/back_btn_press"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="查看聊天记录"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/x70" />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/date_select_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/date_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/date_select"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期选择"
            android:layout_below="@id/date_select_image"
            android:layout_marginTop="@dimen/x10"
            android:textColor="#1296db"/>

    </RelativeLayout>



    <ListView
            android:id="@+id/chatrecord_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/date_select_toplayout"
            android:divider="@null"
            android:scrollbars="none"
            android:visibility="gone"/>


</RelativeLayout>