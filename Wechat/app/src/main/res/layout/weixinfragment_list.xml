<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/weixinfragment_friendslayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y75"
        android:background="@drawable/content_press">

        <ImageView
            android:id="@+id/weixinfragment_friendsicon"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:src="@mipmap/error_load"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/weixinfragment_friendstipnums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/tip_point"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignTop="@id/weixinfragment_friendsicon"/>


        <TextView
            android:id="@+id/weixinfragment_friendsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载中..."
            android:layout_toRightOf="@id/weixinfragment_friendsicon"
            android:textSize="@dimen/x25"
            android:singleLine="true"
            android:maxEms="8"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#000"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/weixinfragment_friendscontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="正在加载中..."
            android:layout_toRightOf="@id/weixinfragment_friendsicon"
            android:layout_below="@id/weixinfragment_friendsname"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="12"
            android:maxLines="1"
            android:enabled="false"/>

        <TextView
            android:id="@+id/weixinfragment_friendstime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载中..."
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>


</LinearLayout>