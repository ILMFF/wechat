<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:background="#222222"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/me_signature_back_btn"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_btn"
            android:background="@drawable/back_btn_press"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="更改个人签名"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/x70" />

        <Button
            android:id="@+id/me_signature_save"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/search_fiend"
            android:textSize="@dimen/x16"
            android:text="保存"
            android:textColor="@color/white"
            android:gravity="center"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/me_edit_signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="你的个人签名"
        android:maxLength="30"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x30"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/green"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一个好的签名更容易让想认识你的人快速的了解你的为人"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x20"/>

</LinearLayout>