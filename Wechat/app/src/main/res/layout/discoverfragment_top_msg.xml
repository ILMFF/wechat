<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/friendcircle_top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/friendcircle_top_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x320"
            android:background="@mipmap/friendcircle_top"/>

        <ImageView
            android:id="@+id/friendcircle_myicon"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:src="@mipmap/icon"
            android:layout_alignBottom="@+id/friendcircle_top_image"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20" />

        <TextView
            android:id="@+id/friendcircle_mynickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/friendcircle_myicon"
            android:text="我的昵称"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignTop="@id/friendcircle_myicon"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x30"/>

    </RelativeLayout>

</LinearLayout>