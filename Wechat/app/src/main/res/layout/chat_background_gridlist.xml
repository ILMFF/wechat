<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background_picture"
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:background="@mipmap/translation_background1"/>

    <ImageView
       android:id="@+id/background_picture_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/background_select"
        android:layout_alignBottom="@id/background_picture"
        android:layout_alignRight="@id/background_picture"
        android:visibility="gone"/>

</RelativeLayout>