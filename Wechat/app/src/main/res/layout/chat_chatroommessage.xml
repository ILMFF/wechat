<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myself_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:background="#222222"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_chatroom_back_btn"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_btn"
            android:background="@drawable/back_btn_press"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="查看好友"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/x70" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chatroom_icon_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <GridView
            android:id="@+id/chatroom_memberlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="5"/>

        <!--<ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:src="@mipmap/chatroom_invite"
            android:layout_toRightOf="@id/chatroom_memberlist"/>
-->

    </RelativeLayout>


    <TextView
        android:id="@+id/chatroom_check_chatrecord"
        android:layout_marginTop="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@drawable/content_press"
        android:text="查看聊天记录"
        android:textSize="@dimen/x18"
        android:gravity="center_vertical"
        android:textColor="#000"
        android:paddingLeft="@dimen/x20"
        android:drawableRight="@mipmap/right"
        android:paddingRight="@dimen/x15"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/discover_press"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"/>

    <TextView
        android:id="@+id/chatroom_clear_chatrecord"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@drawable/content_press"
        android:textColor="#000"
        android:text="清空聊天记录"
        android:textSize="@dimen/x18"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x20"
        android:drawableRight="@mipmap/right"
        android:paddingRight="@dimen/x15"/>


    <Button
        android:id="@+id/chatroom_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:text="删除并退出"
        android:textSize="@dimen/x18"
        android:textColor="@color/white"
        android:background="@drawable/exit"/>

    </LinearLayout>


</LinearLayout>