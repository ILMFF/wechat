<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myself_top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y60"
        android:background="#222222"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/system_setting_back_btn"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_btn"
            android:background="@drawable/back_btn_press"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="系统设置"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/x70" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x20"
        android:background="@color/white">


        <TextView
            android:id="@+id/system_clear_chatrecord"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:background="@drawable/content_press"
            android:clickable="true"
            android:drawablePadding="@dimen/x10"
            android:drawableRight="@mipmap/right"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/y26"
            android:paddingRight="@dimen/x15"
            android:text="清空聊天记录"
            android:textColor="#000"
            android:textSize="@dimen/y18" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@color/discover_press"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@color/white">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:background="@drawable/content_press"
            android:clickable="true"
            android:drawablePadding="@dimen/x10"
            android:drawableRight="@mipmap/right"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/y26"
            android:paddingRight="@dimen/x15"
            android:text="关于本设计"
            android:textColor="#000"
            android:textSize="@dimen/y18" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x50"
        android:background="@color/white">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:background="@drawable/content_press"
            android:clickable="true"
            android:drawablePadding="@dimen/x10"
            android:drawableRight="@mipmap/right"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/y26"
            android:paddingRight="@dimen/x15"
            android:text="帮助"
            android:textColor="#000"
            android:textSize="@dimen/y18" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@color/discover_press"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="@color/white">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:background="@drawable/content_press"
            android:clickable="true"
            android:drawablePadding="@dimen/x10"
            android:drawableRight="@mipmap/right"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/y26"
            android:paddingRight="@dimen/x15"
            android:text="投诉与反馈"
            android:textColor="#000"
            android:textSize="@dimen/y18" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20">


        <TextView
            android:id="@+id/system_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:layout_marginTop="@dimen/y5"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="注销账号切换登录"
            android:textColor="#fff"
            android:textSize="@dimen/y18"
            android:background="@drawable/logout"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginLeft="@dimen/x20">


        <TextView
            android:id="@+id/system_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y60"
            android:layout_marginTop="@dimen/y5"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="退出"
            android:textColor="#fff"
            android:textSize="@dimen/y18"
            android:background="@drawable/exit"/>



    </RelativeLayout>
</LinearLayout>